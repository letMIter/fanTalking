<div class="box-show">
    <div class="box-inner">
    <h3>詳細</h3>
    <div class="groupshow">
        <p><%= @group.name %></p>
        <p><%= @group.image %></p>
        <p><%= @group.content %></p>
        <p>
            #<%= render_with_hashtags(@group.hashbody) %>
        </p>
    </div>

    <div class="comment-wrapper">
        <h3>コメント一覧</h3>
        <% @comments.each do |c| %>
            <div>
                <%= c.user.name unless c.user.blank? %>
                <br>
                <%= c.content %>
            </div>
                <br>
        <% end %>

        <% if user_signed_in? %>
                <%= form_with(model: [@group, @comment], local: true) do |f| %>
            <div class="newgroup-comment">
                <%= f.text_area :content %>
            </div>
                <%= button_tag type: "submit" do %>
                    <i class="far fa-comments"></i> コメントする
                <% end %>
            <% end %>
        <% end %>
    </div>
</div>
</div>